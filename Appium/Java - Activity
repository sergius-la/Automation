// -- Change Activity -- //

System.out.println(driver.currentActivity());

//Template for a New Activity

String drPackage = "displayride.displayrideandroidapp";
String drActivity = "displayride.displayrideandroidapp.MainActivity";

Activity activity2 = new Activity(drPackage, drActivity);

activity2.setAppWaitActivity(drActivity);
activity2.setAppWaitActivity(drActivity);

activity2.setStopApp(false);

((AndroidDriver) driver).startActivity(activity2);

System.out.println(driver.currentActivity());